<h1>show</h1>

<div>
  <h2>User info</h2>
  <table>
    <tr>
      <th><%= attachment_image_tag books.user, :profile_image, :fill, 100, 100, format: 'jpeg' %></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= books.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= books.user.introduction %></th>
    </tr>
    <tr>
      <th><%= link_to "スパナマーク", edit_user_path(user) %></th>
    </tr>
  </table>

  <%= form_with model:book, local:true do |f| %>

    <h2>New Book</h2>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

</div>